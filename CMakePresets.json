{
  "version": 8,
  "configurePresets": [
    {
      "name": "Debug",
      "binaryDir": "${sourceDir}/build/debug",
      "generator": "Ninja",
      "cacheVariables": {
        "CMAKE_CXX_FLAGS": "-ggdb3 -Og -fmax-errors=1"
      }
    },
    {
      "name": "Release",
      "binaryDir": "${sourceDir}/build/release",
      "generator": "Ninja",
      "cacheVariables": {
        "CMAKE_CXX_FLAGS": "-O3 -march=native"
      }
    }
  ],
  "buildPresets": [
    {
      "name": "Debug",
      "configurePreset": "Debug",
      "targets": "all",
      "configuration": "Debug"
    },
    {
      "name": "Release",
      "configurePreset": "Release",
      "targets": "levin",
      "configuration": "Release"
    }
  ]
}